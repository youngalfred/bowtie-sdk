{
    "name": "bowtie-demo-react",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@youngalfred/bowtie-sdk": "^1.0.6",
        "html-react-parser": "^1.4.2",
        "lodash-es": "^4.17.21",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "typescript": "^4.1.2",
        "web-vitals": "^2.1.2"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.1.0",
        "@testing-library/user-event": "^12.1.10",
        "@types/jest": "^26.0.15",
        "@types/lodash-es": "^4.17.4",
        "@types/node": "^16.0.0",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@typescript-eslint/eslint-plugin": "^4.25.0",
        "@typescript-eslint/parser": "^4.25.0",
        "axios": "^0.24.0",
        "eslint": "^7.7.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.4.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.24.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "express": "^4.17.1",
        "jest": "^27.0.6",
        "lint-staged": "^11.0.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.5",
        "rimraf": "^3.0.2",
        "serve": "^12.0.0",
        "ts-jest": "^27.0.4",
        "vite": "^2.3.7",
        "vite-plugin-compression": "^0.2.5",
        "vite-plugin-eslint": "^1.1.3"
    },
    "scripts": {
        "build": "npm-run-all clean build:pack",
        "build:dev": "npm-run-all clean build:fordev",
        "build:fordev": "vite build -m development",
        "build:pack": "vite build",
        "check-format": "npm run prettier -- --list-different",
        "check-types": "tsc --project tsconfig.json --pretty --noEmit",
        "clean": "rimraf build",
        "dev": "vite -m development",
        "format": "npm run prettier -- --write",
        "lint": "eslint --fix --ext .js,.ts,.tsx ./src --ignore-path .gitignore",
        "prettier": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\"",
        "serve": "node server/server.js",
        "test": "",
        "test:coverage": "",
        "validate": "npm-run-all --parallel check-types && lint",
        "validate-and-build": "npm-run-all --parallel check-types check-format lint build"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "jest": {
        "moduleNameMapper": {
            "^@/(.+)": "<rootDir>/src/$1"
        },
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,ts,tsx}",
            "!src/**/*.d.// TODO: s",
            "!src/**/*.stories.{js,jsx,ts,tsx}",
            "!src/test/**/*.{js,jsx,ts,tsx}"
        ]
    },
    "eslintConfig": {
        "overrides": [
            {
                "rules": {
                    "import/no-anonymous-default-export": "off"
                }
            }
        ]
    },
    "lint-staged": {
        "*.+(ts|tsx)": [
            "npm run lint"
        ]
    }
}
